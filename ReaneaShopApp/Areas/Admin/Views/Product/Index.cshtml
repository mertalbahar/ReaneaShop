@model IEnumerable<Product>

<div class="text-center my-3">
    <div class="display-6">Ürünler</div>
</div>

<div class="text-end">
    <div class="my-2">
        <a class="btn btn-outline-success" asp-action="Create">
            <i class="fa fa-plus"></i>
        </a>
    </div>
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th class="text-center">RESİM</th>
                <th class="text-start">ADI</th>
                <th class="text-start">AÇIKLAMA</th>
                <th class="text-start">KATEGORİ</th>
                <th>BİRİM FİYAT</th>
                <th></th>
                <th class="text-center">İŞLEM</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @foreach (Product prd in Model)
            {
                <tr>
                    <td style="width: 3rem;">@prd.ProductId</td>
                    <td class="text-center">
                        <img src="@prd?.ProductImageUrl" alt="@prd.ProductName" width="50" class="rounded shadow" />
                    </td>
                    <td class="text-start">@prd.ProductName</td>
                    <td class="text-start">@prd.ProductSummary</td>
                    <td class="text-start">@prd.CategoryId</td>
                    <td>@prd.ProductPrice.ToString("C2")</td>
                    <td></td>
                    <td class="text-center" style="width: 3rem;">
                        <div class="btn-group">
                            <a class="btn btn-info" target="_blank" asp-controller="Product" asp-action="Get" asp-area=""
                                asp-route-id="@prd.ProductId">
                                <i class="fa fa-search"></i>
                            </a>
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@prd.ProductId">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@prd.ProductId">
                                <i class="fa fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>