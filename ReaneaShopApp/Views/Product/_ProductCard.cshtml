@model Product

<div class="col-sm-12 col-md-6 col-lg-4 my-3">
    <div class="card shadow">
        <div class="card-header text-center">
            @Model.ProductName.ToUpper()
        </div>
        <img src="@Model?.ProductImageUrl" class="card-img-top rounded-0" alt="@Model.ProductName">
        <div class="card-body">
            <div class="card-text">
                <div class="text-danger text-center lead p-2 ronded-2">
                    @Model.ProductPrice.ToString("C2")
                </div>
            </div>
            <p class="card-text">@Model?.ProductSummary</p>
            <form id="@Model.ProductId" asp-page="/cart" method="POST">
                <input type="hidden" asp-for="ProductId" />
                <input type="hidden" name="returnUrl" value="/Product/Get/@Model.ProductId" />

                <div class="btn-group d-flex">
                    <a class="btn btn-outline-secondary" asp-controller="Product" asp-action="GET"
                        asp-route-id="@Model.ProductId">
                        <i class="fa-solid fa-arrow-right"></i>
                    </a>
                    <button type="submit" class="btn btn-outline-secondary">
                        <i class="fa fa-cart-plus"></i>
                    </button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center">Ä°ndirim</div>
    </div>
</div>