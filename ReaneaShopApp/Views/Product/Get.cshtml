@model Product

@section Header
{

}

<div class="row my-3">
    <div class="col-md-12 my-3">
        <div class="text-center">
            <h6 class="display-6">@Model.ProductName</h6>
            <img class="img-fluid rounded-3 shadow my-3 w-75" src="..." alt="@Model.ProductName">
            <p>@Model.ProductSummary</p>
            <p class="lead text-danger">@Model.ProductPrice.ToString("C2")</p>
            <div class="btn-group">
                <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-house"></i> Home
                    </a>
                <a class="btn btn-outline-secondary" asp-controller="Product" asp-action="Index">
                    <i class="fa-solid fa-list"></i> Products
                </a>
            </div>
        </div>
    </div>
</div>

