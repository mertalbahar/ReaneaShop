@model IEnumerable<Category>

<div class="my-3">
    <h6 class="lead">
        <i class="fa fa-bars text-secondary"></i>
        Kategoriler
    </h6>
</div>
<div class="my-4">
    <ul class="list-group">
        <a class="list-group-item list-group-item-action text-decoration-none fs-4" asp-action="Index"
            asp-route-categoryId="">
            Hepsi
        </a>
        @foreach (var cat in Model)
        {
            <a class="list-group-item list-group-item-action text-decoration-none" asp-action="Index"
                asp-route-categoryId="@cat.CategoryId">
                @cat.CategoryName
            </a>
        }
    </ul>
</div>
